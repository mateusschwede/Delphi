unit uAtivCep;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TAtivCepMateus = class(TForm)
    cmbEstado: TComboBox;
    lstCidades: TListBox;
    lstImport: TListBox;
    lblCep: TLabel;
    Label1: TLabel;
    procedure FormCreate(Sender: TObject);
    procedure lstCidadesClick(Sender: TObject);
    procedure cmbEstadoChange(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

  Registro = Record
    Codigo: String;
    Descricao: String;
    Cep: String;
    Uf: String;
  End;

var
  AtivCepMateus: TAtivCepMateus;

implementation

{$R *.dfm}

procedure TAtivCepMateus.cmbEstadoChange(Sender: TObject);
begin
  if cmbEstado.Items[cmbEstado.ItemIndex]='TODOS' then
  begin
    lblCep.Caption := cmbEstado.Items[cmbEstado.ItemIndex];
  end;
end;

procedure TAtivCepMateus.FormCreate(Sender: TObject);
const arquivo = '..\..\assets\cidades.txt';
begin
  if FileExists(arquivo) then
  begin
    lstImport.Items.LoadFromFile(arquivo);
  end
  else
  begin
    MessageDlg('Arq. não encontrado!',mtError,[mbOk],0);
  end;
end;

procedure TAtivCepMateus.lstCidadesClick(Sender: TObject);
begin
  //Carregar cidades de lstImport(Se cmbEstado for 'Estado' aí puxa tudo, senão puxa do valor do Item)
end;

end.
